<head>
  <!-- Required meta tags -->
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <link rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.3/font/bootstrap-icons.min.css">
  <!--Google Fonts-->
  <link
    href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
    rel="stylesheet">

</head>

<body>



  <!--Header Start-->
  <header>
    <section id="topbar" style="background-color: #0a15ab;"
      class="mb-2 mb-lg-0 mb-sm-0 d-none d-lg-flex align-items-center pt-2 pb-2 text-white topbar-transparent">
      <div class="container">
        <div class="row">
          <div class="col-lg-6   text-start">
            <span class="px-3"><i class="bi bi-phone "></i> +639 123 456 </span>
            <i class="bi bi-clock"></i> Mon-Sat: 11:00 AM - 23:00 PM
          </div>
          <div class="col-md-6 text-end">
            <a href="" class="me-4 text-reset">
              <i class="bi bi-facebook"></i>
            </a>
            <a href="" class="me-4 text-reset">
              <i class="bi bi-twitter"></i>
            </a>
            <a href="" class="me-4 text-reset">
              <i class="bi bi-google"></i>
            </a>
            <a href="" class="me-4 text-reset">
              <i class="bi bi-instagram"></i>
            </a>
            <a href="" class="me-4 text-reset">
              <i class="bi bi-linkedin"></i>
            </a>
            <a href="" class="me-4 text-reset">
              <i class="bi bi-github"></i>
            </a>
          </div>
        </div>
      </div>
    </section>
  </header>
  <!--Header End-->


  <!--Navbar Start-->
  <nav class="navbar navbar-expand-lg navbar-light bg-secondary">
    <div class="container">
      <a class="navbar-brand" href="">

        <img class="img_logo" src="https://pnp.gov.ph/wp-content/uploads/2022/01/logo_512.png" alt="PNP Logo">
        <!-- <h2 class="fw-bold  mb-2 mb-lg-0 mb-sm-0">PNP</h2> -->
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="bi bi-list"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav m-auto mb-2 mb-lg-0">
          <% if (user.usertype==='Admin' ) { %>


            <li class="nav-item">
              <a class="nav-link" id="home-link" aria-current="page" href="/index">Home</a>
            </li>

            <li class="nav-item">
              <a class="nav-link" id="dashboard-link" href="/dashboard">Dashboard</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" id="datatable-link" href="/DataTable">Records</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" id="create-link" href="/create">Create</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" id="scanner-link" href="/scanner">Scanner</a>
            </li>

            <li class="nav-item">
              <a class="nav-link" id="admin-table-link" href="/admin/table">Managerlist</a>
            </li>

            <li class="nav-item">
              <a class="nav-link" id="admin-create-link" href="/admin/create">Manager Registration</a>
            </li>
            <li><span></span></li>
            <% } else { %>
              <li class="nav-item">
                <a class="nav-link" id="home-link" aria-current="page" href="/index">Home</a>
              </li>

              <li class="nav-item">
                <a class="nav-link" id="dashboard-link" href="/dashboard">Dashboard</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" id="datatable-link" href="/DataTable">Record</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" id="create-link" href="/create">Create</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" id="scanner-link" href="/scanner">Scanner</a>
              </li>


              <% } %>


        </ul>
        <% if (user.usertype === 'Admin') { %>
            <label>Welcome Admin <%= user.firstName%>!</label>
            <a class="nav-link ml-auto" id="logout-link" href="/logout">Logout</a>
        <% } else { %>
            <a class="nav-link ml-auto" id="profile-link" href="/profile/<%= user._id %>">Profile</a>
            <label>Welcome Manager <%= user.firstName %>!</label>
            <a class="nav-link ml-auto" id="logout-link" href="/logout">Logout</a>
            <% } %>
      </div>
    </div>
  </nav>
  <!--Navbar End-->

  <script>
    // Get the current page URL
    var currentPage = window.location.href;

    // Add "active" class to the corresponding navigation item based on the current page
    if (currentPage.includes("index")) {
      document.getElementById("home-link").classList.add("active");

    } else if (currentPage.includes("dashboard")) {
      document.getElementById("dashboard-link").classList.add("active");
    } else if (currentPage.includes("admin/create")) {
      document.getElementById("admin-create-link").classList.add("active");
    } else if (currentPage.includes("admin/table")) {
      document.getElementById("admin-table-link").classList.add("active");
    } else if (currentPage.includes("DataTable")) {
      document.getElementById("datatable-link").classList.add("active");
    } else if (currentPage.includes("create")) {
      document.getElementById("create-link").classList.add("active");
    } else if (currentPage.includes("scanner")) {
      document.getElementById("scanner-link").classList.add("active");
    } else if (currentPage.includes("profile")) {
      document.getElementById("profile-link").style.display = "remove";
    }
  </script>
</body>


<style>
  .navbar .container li a {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.navbar .container li a::after {
  content: "";
  display: block;
  width: 100%;
  height: 4px;
  background: #0a15ab;
  transform: scale(0, 1);
  transition: transform 200ms ease-in;
}


.navbar .container li a:hover::after {
  transform: scale(1, 1);
}

  .navbar-light .navbar-nav .nav-link.active,
  .navbar-light .navbar-nav .show>.nav-link {
    color: yellow;
  }


  .navbar-light .navbar-nav .nav-link {
    color: white;

  }

  .navbar .container li a {
    display: flex;
    flex-direction: column;
    align-items: center;


  }

  .navbar .container li a::after {
    content: "";
    display: block;
    width: 100%;
    height: 4px;
    background: #0a15ab;
    transform: scale(0, 1);
    transition: transform 200ms ease-in;
  }

  .navbar .container li a:hover::after {
    transform: scale(1, 1);

  }




  .img_logo {
    height: 100px;
    width: 80px;
    background-color: transparent;
  }

  .navbar-expand-lg .navbar-collapse {
    display: flex !important;
    flex-basis: auto;
    align-items: baseline;
  }
</style>

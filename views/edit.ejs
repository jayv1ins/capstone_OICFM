<title>Edit</title>
<body>

<div class="container mt-5  ">
<div class="row d-flex justify-content-center align-items-center">
    <div class="col-md-8  border border-white p-4 rounded bg-white" >
        <form id="registration-form" action="/edit/<%= data.id %>" method="POST">
        <div class="form-row">
          
          <div class="form-group col-md-5">
            <label for="inputEmail4">Last Name</label>
            <input type="text" id="last_name" name="lastName"  value="<%= data.lastName %>"required>
          </div>
          <div class="form-group col-md-5">
            <label for="inputPassword4">First Name</label>
            <input type="text" id="firstName" name="firstName" value="<%= data.firstName %>"required>
          </div>
          <div class="form-group col-md-5">
            <label for="inputPassword4">Middle Name</label>
            <input type="text" id="middleName" name="middleName" value="<%= data.middleName %>"required>
          </div>

          <div class="form-group col-md-4">
            <label for="gender"  name="gender" id="gender">Gender</label>
            <select id="gender" name="gender" class="form-control">
            <option value="male" <% if (data.gender === 'male') { %>selected<% } %>>Male</option>
            <option value="female" <% if (data.gender === 'female') { %>selected<% } %>>Female</option>
            <option value="other" <% if (data.gender === 'other') { %>selected<% } %>>Other</option>
            </select>
          </div>

          <div class="form-group col-md-5">
            <label for="inputPassword4">Birthdate</label>
            <input type="date" id="birthdate" name="birthdate" value="<%= data.birthdate %>" required>
          </div>


        </div>
        <div class="form-group">
          <label for="inputAddress">Address</label>
          <input type="text" id="home_address" name="address"  value="<%= data.address %>"required>
        </div>
        
  
         
          <div class="form-group col-md-2">
            <label for="inputZip">Zip</label>
            <input type="text" id="zip-code" name="zip" pattern="\d+" required minlength="" maxlength="4"  value="<%= data.zip %>">
          </div>

          <div class="form-group col-md-2">
            <label for="inputZip">Rank</label>
            <input type="text" id="rank" name="rank"  value="<%= data.rank %>"required>
          </div>
        </div>

      
        <input type="submit" value="Save">

        <a type="button" href="/home" class="btn btn-link btn-lg btn-block">home</a>

      </form>
    </div>
</div>
</div>


  

</body>
</html>
        

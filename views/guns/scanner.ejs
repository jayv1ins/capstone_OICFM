<!DOCTYPE html>
<html>
<head>
  <title>QR Code Scanner</title>
  <!-- The library for using html5-qrcode  -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/html5-qrcode/2.3.4/html5-qrcode.min.js" integrity="sha512-k/KAe4Yff9EUdYI5/IAHlwUswqeipP+Cp5qnrsUjTPCgl51La2/JhyyjNciztD7mWNKLSXci48m7cctATKfLlQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  <style>
    .result {
      background-color: green;
      color: #fff;
      padding: 20px;
    }
    .row {
      display: flex;
    }
    .result-group {
      display: none;
    }
    .result-group.show {
      display: block;
    }
    </style>
</head>
<%- include('../components/navbar') %>
<body>
  <div class="row">
    <div class="col">
      <div style="width: 600px;" id="reader"></div>
    </div>
    <div class="col" style="padding: 30px;">
      <h4>SCAN RESULT</h4>
      <div id="success-message" style="display: none; color: green; margin-top: 10px;">
        QR code scanned and Turn Over Date updated successfully! please wait 5 second to redirect in view page.
      </div>
      
      <form id="result-form" class="result-group" >
        <div>
        </div>

        <div>
          <label for="field1">ID Number:</label>
          <input type="text" id="field1" name="field1">
        </div>

        <div>
          <label for="field2">Last Name:</label>
          <input type="text" id="field2" name="field2">
        </div>

        <div>
          <label for="field3">First Name:</label>
          <input type="text" id="field3" name="field3">
        </div>

        <div>
          <label for="field4">Middle Name:</label>
          <input type="text" id="field4" name="field4">
        </div>

        <div>
          <label for="field5">Qualifiers:</label>
          <input type="text" id="field5" name="field5">
        </div>

        <div>
          <!-- Label only or may input ikaw na bahala hahaha -->
          <label for="field6">Rank: <span id="field6"> </span></label>
        </div>

        <div>
          <label for="field7">Station:</label>
          <input type="text" id="field7" name="field7">
        </div>

        <div>
          <label for="field8">Gun Type:</label>
          <input type="text" id="field8" name="field8">
        </div>

        <div>
          <label for="field9">Gun Name:</label>
          <input type="text" id="field9" name="field9">
        </div>

        <div>
          <label for="field10">Caliber:</label>
          <input type="text" id="field10" name="field10">
        </div>

        <div>
          <label for="field11">Serial Number:</label>
          <input type="text" id="field11" name="field11">
        </div>

        <div>
          <label for="field12">Cost:</label>
          <input type="text" id="field12" name="field12">
        </div>

        <div>
          <label for="field13">Acquisition Date:</label>
          <input type="text" id="field13" name="field13">
        </div>

        <div>
          <label for="field14">Turn Over Date:</label>
          <input type="text" id="field14" name="field14">
        </div>

        <div>
          <label for="field15">Returned Date:</label>
          <input type="text" id="field15" name="field15">
        </div>

      </form>
    </div>
  </div>

  <!-- To call the library and then  render the scanner -->
  <script>
    var html5QrcodeScanner = new Html5QrcodeScanner("reader", { fps: 10, qrbox: 250 });
    html5QrcodeScanner.render(onScanSuccess, onScanError);

    
function onScanSuccess(qrCodeMessage) {
  // Show the scan result with split data and put it in the form
  var splitMessage = qrCodeMessage.split(' ');
  document.getElementById('field1').value = splitMessage[0];
  document.getElementById('field2').value = splitMessage[1];
  document.getElementById('field3').value = splitMessage[2];
  document.getElementById('field4').value = splitMessage[3];
  document.getElementById('field5').value = splitMessage[4];
  document.getElementById('field6').textContent = splitMessage[5];
  document.getElementById('field7').value = splitMessage[6];
  document.getElementById('field8').value = splitMessage[7];
  document.getElementById('field9').value = splitMessage[8];
  document.getElementById('field10').value = splitMessage[9];
  document.getElementById('field11').value = splitMessage[10];
  document.getElementById('field12').value = splitMessage[11];
  document.getElementById('field13').value = splitMessage[12];

  // Set the Turn Over Date to the current date (today)
  var today = new Date().toISOString().split('T')[0];
  document.getElementById('field14').value = today;

  // The splitMessage will go to the form automatically
  document.getElementById('result-form').classList.add('show');
  document.getElementById('success-message').style.display = 'block';

  // Send an HTTP POST request to your API endpoint to update the data
  const apiUrl = '/scan'; // This should be the correct API endpoint
  const dataToUpdate = { qrCodeMessage: qrCodeMessage, turnOver: today };

  fetch(apiUrl, {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json'
    },
    body: JSON.stringify(dataToUpdate)
  })
  .then(response => response.json())
  .then(data => {
    // Handle the API response if needed
    console.log('Data updated successfully:', data);
     
    // to redirect in select page after 5 seconds
    // setTimeout(() => {
    //  window.location.href = `/select/${data.data.id}`;
    // }, 5000); //
  })
  .catch(error => {
    console.error('Error updating data:', error);
  });
}

function onScanError(errorMessage) {
  console.error(errorMessage);
}
  </script>
  
  
</body>
</html>
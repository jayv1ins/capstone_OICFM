// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Student_Info {
          id            String      @id @default(auto()) @map("_id") @db.ObjectId
          name      String?
          program   String?
          yearlevel String?
          gender    String?
            }

model User {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  username    String      @unique
  email       String      @unique
  usertype    String
  password    String
  shift       Int
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model Data {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  lastName    String
  firstName   String
  middleName  String
  gender      String
  birthdate   String
  hobbies     String[]
  address     String
  zip         String
  civilStatus String
  keyA        Int
  keyB        Int
}

